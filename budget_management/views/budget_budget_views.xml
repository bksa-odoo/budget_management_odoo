<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="budget_management_action" model="ir.actions.act_window">
        <field name="name">Budget</field>
        <field name="res_model">budget.budget</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="budget_management_view_kanban" model="ir.ui.view">
        <field name="name">budget.mamanegement.view.kanban</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <kanban records_draggable="0">
                <header>
                    <button name="%(budget_management.action_add_multiple_Budget_wizard)d" string="Create Multiple Budgets" type="action"/>
                </header>
                <templates>
                    <t t-name="kanban-menu" groups="base.group_user">
                        <div class="container">
                            <div class="row">
                                <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                                    <h5 role="menuitem" class="o_kanban_card_manage_title">
                                        <span>View</span>
                                    </h5>
                                    <div role="menuitem">
                                        <a name="action_view_budget" type="object">Configuration</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_settings row">
                                <div role="menuitem" aria-haspopup="true" class="col-12">
                                    <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-name="kanban-box">
                        <div t-att-class="'oe_kanban_global_click'">
                            <div class="oe_kanban_details">
                                <div class="oe_kanban_name">
                                    <field name="is_favorite" widget="boolean_favorite" nolabel="1" force_save="1"/>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="oe_kanban_bottom mt-2">
                                    <div class="row">
                                        <div class="col-12">
                                            <span class="fa fa-clock-o me-2" title="Dates"></span>
                                            <field name="date_from" />
                                            <span> -></span>
                                            <field name="date_to"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom_right float-end">
                                    <field name="responsilbe_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>

                </templates>
            </kanban>
        </field>
    </record>

    <record id="budget_management_view_form" model="ir.ui.view">
        <field name="name">budget.management.view.form</field>
        <field name="model">budget.budget</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_reset_to_draft" string="Reset to Draft" class="oe_highlight" type="object" invisible="state == 'draft'"/>
                    <button name="action_budget_revise" string="Revise" type="object"/>
                    <button name="action_budget_done" string="Done" type="object" invisible="state == 'done'"/>
                    <button name="action_budget_confirm" string="Confirm" type="object" invisible="state == 'confirm'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,revised,done"/>
                </header>
                <sheet>
                    <label for="name" string="Budget Name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="responsilbe_id"/>
                        </group>
                        <group>
                            <label for="date_to" string="Periods"/>
                            <div class="row">
                                <field name="date_from" style="width: 33%" />
                                <span style="width: 8%"> -></span>
                                <field name="date_to" style="width: 33%" />
                            </div>
                            <field name="company_id"/>
                            <field name="on_over_budget"/>
                        </group>
                        <notebook>
                            <page string="Budget Lines">
                                <field name="budget_line_ids" widget="one2many_list" readonly="state == 'confirm'">
                                    <tree editable="top">
                                        <field name="analytic_account_id"/>
                                        <field name="budget_amt"/>
                                        <field name="budget_achieved"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>