<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="budget_management_create_muiltple_budget_wizard_view_form" model="ir.ui.view">
        <field name="name">budget.management.create.muiltple.budget.wizard.form</field>
        <field name="model">batch.budget.create.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Multpile Budgets">
                <group>
                    <label for="date_to" string="Duration"/>
                    <div class="row">
                        <field name="date_from" style="width: 10%" />
                        <span>
                            <i class="fas fa-arrow-right"></i>
                        </span>
                        <field name="date_to" style="width: 10%" />
                    </div>
                </group>
                <!-- <footer>
                    <button class="btn-primary" name="action_add_offer" type="object" string="Add Offer"/>
                    <button string="Discard" special="cancel"/>
                </footer> -->
            </form>
        </field>
    </record>



    <record id="action_add_multiple_Budget_wizard" model="ir.actions.act_window">
        <field name="name">Create Multiple Budgets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">batch.budget.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>